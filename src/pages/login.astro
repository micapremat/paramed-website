---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/");
}
---

<Layout title="Sign in">
  <div class="text-center mx-auto border rounded-lg  py-2 md:w-1/2">
    <h1 class="my-4 text-2xl">Sign in</h1>
    <p class="text-font-black text-xs">New here? <a href="/register" class="text-primary font-semibold">Create an account</a></p>
    <form action="/api/auth/signin" method="post">
      <div class="flex flex-col justify-center my-2">
      <div class="my-2">
        <label for="email" class="mr-2 text-sm">Email</label>
        <input type="email" name="email" id="email" class="border rounded-md text-xs p-1" placeholder="ejemplo@email.com" />
      </div>
      <div class="my-2">
        <label for="password" class="mr-2 text-sm">Password</label>
        <input type="password" name="password" id="password" class="border rounded-md text-xs p-1" placeholder="password" />
      </div>
    </div>
    <button type="submit" class="bg-primary text-font-white px-3 py-1 rounded-lg mb-2">Login</button>
    </form>
  </div>
</Layout>