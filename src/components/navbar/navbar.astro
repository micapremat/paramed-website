---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import logo from "assets/logo.png";
import { Picture } from "astro:assets";

const menuitems = [
  {
    title: "Inicio",
    path: "/",
  },
  {
    title: "Instituci√≥n",
    path: "/about",
  },
  {
    title: "Carreras",
    path: "/blog",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<Container>
  <header class='flex flex-col lg:flex-row justify-between items-center my-5'>
    <Astronav>
      <div class='flex w-full lg:w-auto items-center justify-between'>
        <a href='/' class='text-lg'
          >
        <Picture
          src={logo}
          alt='Astronaut in the air'
          widths={[180, 380, 580]}
          sizes='(max-width: 500px) 100vw, 620px'
          loading='eager'
          format='avif'
          width={80}
          
        />
        </a>
        <div class='block lg:hidden'>
          <MenuIcon class='w-4 h-4 text-gray-800' />
        </div>
      </div>
      <MenuItems class='hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0'>
        <ul class='flex flex-col lg:flex-row lg:gap-3'>
          {
            menuitems.map((item, index) => (
              <>
                <li>
                  <a
                    href={item.path}
                    class='flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900'>
                    <span> {item.title}</span>
                  </a>
                </li>
              </>
            ))
          }
        </ul>
        <div class='lg:hidden flex items-center mt-3 gap-4 bg-primary'>
          <Link href='#' style='muted' block size='md' class='bg-primary'
            >Log in</Link
          >
          <Link href='#' size='md' block class='bg-primary'>Sign up</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class='hidden lg:flex items-center gap-4'>
        <a href='#'>Log in</a>
        <Link href='#' size='md'>Sign up</Link>
      </div>
    </div>
  </header>
</Container>
